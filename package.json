{
  "name": "DecoratedLogWithLineNumber",
  "private": false,
  "version": "1.0.0",
  "description": "A simple spare time project adding proper line numbers to log output by decorating angular $log",
  "repository": "https://github.com/angular/decorated-log-with-line-number",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "karma-junit-reporter": "^0.2.2"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
